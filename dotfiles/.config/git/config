[include]
	path = ~/.config/git/default
[includeif "gitdir:~/Work/"]
	path = ~/.config/git/work

[commit]
	gpgSign = true
[tag]
	gpgSign = true
[init]
	defaultBranch = main
[advice]
	detachedHead = false
[alias]
	uncommit = !git reset --soft HEAD^ && git status
	graph = log --oneline --all --graph --pretty --decorate --date=short
	latest = log --oneline -n 20
